{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "playwright"]
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts",
    "src/**/*.ts"
  ]
}

